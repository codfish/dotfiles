#!/usr/bin/env zsh

# Test whether a Homebrew formula is already installed
# $1 - formula name (may include options)
formula_exists() {
  if $(brew list $1 &>/dev/null); then
    printf "%s already installed.\n" "$1"
    return 0
  fi

  e_warning "Missing formula: $1"
  return 1
}

# Test whether an app is already installed in /Applications or ~/Applications
# $1 - cask name
# $2 - app name
cask_exists() {
  if $(brew list --cask $1 &>/dev/null); then
    printf "%s already installed.\n" "$2"
    return 0
  fi

  if [ -d "${HOME}/Applications/${2}.app" ]; then
    printf "%s already installed.\n" "$2"
    return 0
  fi

  if [ -d "/Applications/${2}.app" ]; then
    printf "%s already installed.\n" "$2"
    return 0
  fi

  e_warning "Missing app: $1"
  return 1
}

brew_tap() {
  if brew tap | grep $1 &> /dev/null
  then
    echo "already tapped - $1"
    false
  else
    e_header "Tapping $1"
    brew tap $1
  fi
}

run_brew() {
  # Check for Homebrew
  if ! type 'brew' &> /dev/null; then
    printf "\n"
    e_error "Error: Homebrew not found."
    printf "Aborting...\n"
    exit
  fi

  # Use the latest version of Homebrew
  e_header "Updating Homebrew..."
  brew update
  [[ $? ]] && e_success "Done"

  # Upgrade any already-installed formulae
  e_header "Updating any existing Homebrew formulae..."
  brew upgrade
  [[ $? ]] && e_success "Done"

  # update or install desired formulae
  e_header "Checking status of desired Homebrew formulae..."

  # ** array items can include options for package **
  local -a desired_formulae=(
    'ack'
    'adr-tools'
    'awscli'
    'blendle/blendle/kns'
    'cheat'
    'coreutils' # GNU core utilities (those that come with macOS are outdated)
    'deno'
    'fnm'
    'git'
    'gh'
    'go'
    'hashicorp/tap/terraform'
    'heroku/brew/heroku'
    'jq'
    'kubectl'
    'kubectx'
    'mysql'
    'nginx'
    'nvm'
    'oven-sh/bun/bun'
    'php'
    'pipx'
    'poetry'
    'pure'
    'python'
    'pyenv'
    'rbenv'
    'rsync'
    'tmux'
    'watchman'
    'wget'
  )

  for index in ${desired_formulae[@]}
  do
    if ! formula_exists $index; then
      brew install $index
    fi
  done

  # Cleanup brew
  e_header "Cleaning brew..."
  brew cleanup -s
  [[ $? ]] && e_success "Done"
}

run_brew_cask() {
  if ! type 'brew' &> /dev/null; then
    printf "\n"
    e_error "Error: Homebrew not found."
    printf "Aborting...\n"
    exit
  fi

  # mapping of [<cask-name>]='<Applications-directory-name>'
  declare -A desired_apps=(
    [1password]='1Password'
    [alfred]='Alfred 5'
    [appcleaner]='AppCleaner'
    [brave-browser]='Brave Browser'
    [chatgpt]='ChatGPT'
    [cursor]='Cursor'
    [docker]='Docker'
    [dropbox]='Dropbox'
    [figma]='Figma'
    [firefox]='Firefox'
    [ghostty]='Ghostty'
    [google-chrome]='Google Chrome'
    [google-drive]='Google Drive'
    [jetbrains-toolbox]='JetBrains Toolbox'
    [kap]='Kap'
    [loom]='Loom'
    [notion]='Notion'
    [postico]='Postico'
    [postman]='Postman'
    [slack]='Slack'
    [spotify]='Spotify'
    [todoist]='Todoist'
    [visual-studio-code]='Visual Studio Code'
    [warp]='Warp'
    [workflowy]='WorkFlowy'
    [zoom]='zoom.us'
  )

  # check if app is installed, if not, install it
  e_header "Installing missing macOS applications..."
  for cask_name app_name in "${(@kv)desired_apps}"; do
    if ! cask_exists "$cask_name" "$app_name"; then
      brew install --cask $cask_name
    fi
  done

  echo ""
  e_success "Done installing macOS applications!"
}
